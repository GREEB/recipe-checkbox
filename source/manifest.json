{
    "name": "Recipe Checkbox",
    "version": "0.0.1",
    "description": "Adds checkboxes to selected websites with recipes & more",
    "homepage_url": "https://github.com/GREEB/recipe-checkbox",
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "recipie-checkbox@greeb.github.com",
            "strict_min_version": "100.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.eat-this.org/*"
            ],
            "css": [
                "sites/eat-this.org/style.css",
                "global.css"
            ],
            "run_at": "document_end",
            "js": [
                "script.js"
            ]
        },
        {
            "matches": [
                "*://*.allrecipes.com/*"
            ],
            "css": [
                "sites/allrecipes.com/style.css",
                "global.css"
            ],
            "run_at": "document_end",
            "js": [
                "script.js"
            ]
        },
        {
            "matches": [
                "*://*.food.com/*"
            ],
            "css": [
                "sites/food.com/style.css",
                "global.css"
            ],
            "run_at": "document_end",
            "js": [
                "script.js"
            ]
        }
    ]
}